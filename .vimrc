syntax on

set noswapfile
set encoding=UTF-8

set hlsearch incsearch

set ignorecase smartcase

set number

set cindent
set tabstop=4
set expandtab shiftround softtabstop=4 shiftwidth=4

set wildmode=list:longest wildmenu

set hidden
set autoread

set iskeyword=a-z,A-Z,48-57,_

filetype plugin on

colorscheme desert
